@require 'jeet'
@require 'rupture'
@require 'axis'

/* Color */
gray = #292929

pink = #DC6056
yellow = #EBB751
blue = #98CDDD
darkPurple = #2E2947
blueGray = #4A5B6B
purple = #A3819A


mobile = 30em
tablet = 60em
laptop = 80em

shadow(size=1, alpha=0.12)
  if size is 1
    box-shadow: 0 1px 2px rgba(0, 0, 0, alpha), 0 1px 2px rgba(0, 0, 0, alpha*2);
  if size is 2
    box-shadow: 0 2px 4px rgba(0, 0, 0, alpha), 0 2px 4px rgba(0, 0, 0, alpha*2);
  if size is 3
    box-shadow: 0 3px 6px rgba(0, 0, 0, alpha), 0 3px 6px rgba(0, 0, 0, alpha*2);



-tabNav(side, navSize)
  flex 0 0 navSize
  if side is 'left' or side is 'right'
    overflow-y auto
    & > *
      display block
  else
    & > *
      float left
  & > *
    cursor pointer


-tabBody(fade, height, active)
  flex 1 1 auto
  position relative
  & > *
    position absolute
    top 0
    left 0
    width 100%
    if height
      height 100%
      overflow-y auto
    pointer-events none
    opacity 0
    if fade
      transition opacity fade ease
    &.{active}
      unless height
        position relative
      pointer-events auto
      opacity 1

tabs(side='top', height=0, navSize=auto, fade=0.3s, active="active")
  display flex
  if height
    height height
  flex-wrap nowrap
  if side is 'top'
    flex-direction column
  if side is 'bottom'
    flex-direction column-reverse
  if side is 'left'
    flex-direction row
  if side is 'right'
    flex-direction row-reverse

  & > ul
    margin 0
    padding 0

  & > *:first-child
    -tabNav(side, navSize)
  & > *:last-child
    -tabBody(fade, height, active)